
# ==============================================================================
# .env.docker.testing - Variables d'environnement Docker
# ==============================================================================

APP_NAME="Laravel Testing Docker"
APP_ENV=testing
APP_KEY=base64:AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de données PostgreSQL de test
DB_CONNECTION=pgsql
DB_HOST=postgres-test
DB_PORT=5432
DB_DATABASE=laravel_test
DB_USERNAME=laravel_test
DB_PASSWORD=test_password

# Alternative SQLite
# DB_CONNECTION=sqlite
# DB_DATABASE=:memory:

# Cache et sessions
BROADCAST_CONNECTION=log
CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Redis
REDIS_HOST=redis-test
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailhog-test
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Services externes mockés
STRIPE_KEY=pk_test_docker_fake_key
STRIPE_SECRET=sk_test_docker_fake_secret
STRIPE_WEBHOOK_SECRET=whsec_docker_fake_webhook

# MinIO S3 pour tests
AWS_ACCESS_KEY_ID=testuser
AWS_SECRET_ACCESS_KEY=testpassword
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=test-bucket
AWS_ENDPOINT=http://minio-test:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# Configuration de test
MOCK_EXTERNAL_SERVICES=true
SKIP_EXTERNAL_VALIDATIONS=true

